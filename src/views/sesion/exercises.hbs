<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
        <div class="card">
            <div class="card-header text-center">
            <h4>Ejercicios Asignados</h4>
            </div>
            <div class="card-body text-center">
                {{#each assignments}}
                    <div class="exercise">
                        <h3>{{this.nombre}}</h3>
                        <iframe width="560" height="315" src="{{this.video}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <p>{{this.descripcion}}</p>
                        <p>Cantidad de repeticiones a realizar: {{this.repeticiones}}</p>
                        {{#if @last}}
                            <div class="buttons">
                                <a class="btn btn-outline-primary" href="/profile">Salir</a>
                                {{!-- <a href="/sesion/complete/{{id}}" class="btn btn-success">Marcar como realizada</a> --}}
                                {{{id}}}
                                <a href="/sesion/complete/{{../id}}" class="btn btn-success">Marcar como realizada</a>
                            </div>
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        </div>
        </div>
    </div>
</div>

